	},
	"dependencies": {
		"@lo-fi/common": "workspace:*",
		"better-sqlite3": "^7.6.2",
		"ws": "^8.9.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.0",
		"@types/ws": "^8.5.3",
		"typescript": "^4.7.4"
	}
}
