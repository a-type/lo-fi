{
	"name": "@lo-fi/server",
	"version": "0.1.0-rc.9",
	"access": "public",
	"type": "module",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"publishConfig": {
		"types": "./dist/esm/index.d.ts",
		"main": "./dist/cjs/index.js",
